@model PeopleReg.Models.Person
@{
    ViewData["Title"] = "Index";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobilNum" class="control-label"></label>
                <input asp-for="MobilNum" class="form-control" />
                <span asp-validation-for="MobilNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add this person" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>